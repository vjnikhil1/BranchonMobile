<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.nikhil.branchonmobile.ChequeFragment"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cheque" />
    <TextView
        android:text="Cheque Deposit Summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView16"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="25dp"
        android:textAlignment="center" />
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Sorry there are'nt any Cheques Deposited. Try one now!"
        android:visibility="invisible"
        android:id="@+id/noTransList"
        android:gravity="center"/>
</LinearLayout>
