<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context="com.example.nikhil.branchonmobile.DDFragment"
        android:background="@android:color/white">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0.1"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/forgot" />
            <TextView
                android:text="Forgot Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:layout_gravity="center"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:layout_weight="0.9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/imageView5"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="5dp"-->
            <!--app:srcCompat="@drawable/amount" />-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:id="@+id/accno"
                    android:hint="Account Number"
                    android:maxLength="11"
                    android:layout_below="@+id/textView17"
                    android:layout_alignStart="@+id/editText14" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <!--<ImageView-->
                <!--android:id="@+id/imageView5"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--app:srcCompat="@drawable/amount" />-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:id="@+id/editText13"
                    android:hint="DOB (DD/MM/YY)"
                    android:maxLength="8"
                    android:layout_below="@+id/textView17"
                    android:layout_alignStart="@+id/editText14" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <!--<ImageView-->
                <!--android:id="@+id/imageView6"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--app:srcCompat="@drawable/payable" />-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editText14"
                    android:layout_gravity="center"
                    android:hint="Email ID"
                    android:maxLength="40"
                    android:layout_below="@+id/editText13"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="92dp" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <!--<ImageView-->
                <!--android:id="@+id/imageView7"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--app:srcCompat="@drawable/words" />-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:id="@+id/editText15"
                    android:layout_below="@+id/editText13"
                    android:layout_alignStart="@+id/editText13"
                    android:layout_marginTop="19dp" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <!--<ImageView-->
                <!--android:id="@+id/imageView8"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--app:srcCompat="@drawable/password" />-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Re-enter Password"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:layout_gravity="center"
                    android:id="@+id/password"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:text="Generate Password"
            android:theme="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/buttonDD"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</ScrollView>